<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Admin Page</title>
    <!-- for language  -->
    <meta charset="utf-8" />

    <!-- Responsive Design -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS v5.2.1 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <!-- Font Awesome  -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- External css -->
    <!-- NOT: `/css/styles.css` için  public dizininde olması gerekiyor -->
    <link rel="stylesheet" href="/admin/css/blog.css" />
  </head>

  <body class="container">
    <!-- start codes -->

    <h6 class="text-center text-uppercase text-primary display-5">Admin Blog Sayfası</h6>
    <p><%=csrfToken %></p>

    <!-- form#blog-form-id>input#_csrf+(div.form-group.mb-3>span+input#.form-control)*4+div.form-group.mb-3>input.btn.btn-danger{Temizle}+button.btn.btn-primary{Gönder} -->
    <form action="/blog" method="POST" id="blog-form-id">
        <!-- CSRF(Cross Site Request Forgery) -->
        <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>" > </input>

        <!-- BLOG HEADER -->
            <div class="form-group mb-3">
                <span for="header">Header</span>
                <input type="text" id="header" name="header" class="form-control" placeholder="Blog Başlığı..." autofocus>
            </div>

            <!-- BLOG CONTENT -->
            <div class="form-group mb-3">
                <span for="content">Content</span>
                <input type="text" id="content" name="content" class="form-control" placeholder="Blog İçeriği..." autofocus>
            </div>

            <!-- BLOG AUTHOR -->
            <div class="form-group mb-3">
                <span for="author">Author</span>
                <input type="text" id="author" name="author" class="form-control" placeholder="Blog Yazarı..." autofocus>
            </div>

            <!-- BLOG TAGS -->
            <div class="form-group mb-3">
                <span for="tags">TAGS</span>
                <input type="text" id="tags" name="tags" class="form-control" placeholder="Blog Etiketleri..." autofocus>
            </div>

        <!-- SUBMIT -->
            <div class="form-group mb-3">
                <input type="reset" class="btn btn-danger" value="Temizle"></input>
                <button type="submit" class="btn btn-primary">Gönder</button>
            </div>
    </form>

    <hr>
    
    <!-- h2.display-5.text-center.text-primary{Blog List} -->
    <h2 class="display-5 text-center text-primary text-uppercase ">Blog List</h2>
    <!-- table#blog-table.table.table-hover.table-striped.table-sm>thead>tr>(th{item-$}*9)^^tbody -->
    <table id="blog-table-id" class="table table-hover table-striped table-sm">
      <thead>
        <tr>
          <th>ID</th>
          <th>HEADER</th>
          <th>CONTENT</th>
          <th>AUTHOR</th>
          <th>TAGS</th>
          <th>VIEWS</th>
          <th>STATUS</th>
          <th>CREATED DATE</th>
          <th>ACTIONS</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>


    <!-- end codes -->
    <!-- Bootstrap JavaScript Libraries -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- external js -->
    <!-- NOT: `/css/styles.css` için  public dizininde olması gerekiyor -->
    <script src="/admin/js/blog.js"></script>
  </body>
</html>
